<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gagobigdata.myview.MainActivity">


    <com.gagobigdata.myview.CircleChartView
        android:id="@+id/chart_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:circle_width="14dp" />


    <com.gagobigdata.myview.WeekWeatherView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:visibility="gone" />

    <com.gagobigdata.myview.HoursWeatherView
        android:id="@+id/hour_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <com.gagobigdata.myview.DayWeatherView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="gone"/>

</RelativeLayout>
